{
  "manifest_version": 3,
  "name": "WordPress Shortcode Manager",
  "version": "1.0",
  "description": "Store and organize WordPress shortcodes locally",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}